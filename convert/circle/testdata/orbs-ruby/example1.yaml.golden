version: 1
stages:
- name: build
  type: ci
  spec:
    platform:
      os: linux
      arch: amd64
    runtime:
      type: cloud
      spec: {}
    steps:
    - name: install_deps
      type: script
      spec:
        run: |-
          bundle config deployment 'true'
          bundle config gemfile "Gemfile"
          bundle config path "./vendor/bundle"
          bundle check || bundle install
    - name: install_packages
      type: script
      spec:
        run: yarn install

- name: checking
  type: ci
  spec:
    platform:
      os: linux
      arch: amd64
    runtime:
      type: cloud
      spec: {}
    steps:
    - name: install_deps
      type: script
      spec:
        run: |-
          bundle config deployment 'true'
          bundle config gemfile "Gemfile"
          bundle config path "./vendor/bundle"
          bundle check || bundle install
    - name: rubocop_check
      type: script
      spec:
        run: |-
          mkdir -p "/tmp/rubocop-results"
          bundle exec rubocop . --out /tmp/rubocop-results/check-results.xml --format progress

- name: test
  type: ci
  spec:
    platform:
      os: linux
      arch: amd64
    runtime:
      type: cloud
      spec: {}
    envs:
      BUNDLE_JOBS: "3"
      BUNDLE_RETRY: "3"
      PGHOST: 127.0.0.1
      PGPASSWORD: ""
      PGUSER: circleci-demo-ruby
      RAILS_ENV: test
    steps:
    - type: background
      spec:
        image: circleci/postgres:9.5-alpine
        envs:
          POSTGRES_DB: rails_blog_test
          POSTGRES_PASSWORD: ""
          POSTGRES_USER: circleci-demo-ruby
    - name: install_deps
      type: script
      spec:
        run: |-
          bundle config deployment 'true'
          bundle config gemfile "Gemfile"
          bundle config path "./vendor/bundle"
          bundle check || bundle install
    - name: install_packages
      type: script
      spec:
        run: yarn install
    - name: Wait for DB
      type: script
      spec:
        image: cimg/ruby:2.7-node
        run: dockerize -wait tcp://localhost:5432 -timeout 1m
    - name: Database setup
      type: script
      spec:
        image: cimg/ruby:2.7-node
        run: bundle exec rails db:schema:load --trace
    - name: rspec_test
      type: script
      spec:
        run: |-
          mkdir -p "/tmp/test-results/rspec"
          bundle exec rspec --profile 10 --format RspecJunitFormatter --out /tmp/test-results/rspec/results.xml --format progress
