version: 1
stages:
- name: node/test
  type: ci
  spec:
    platform:
      os: linux
      arch: amd64
    runtime:
      type: cloud
      spec: {}
    steps:
    - name: install_packages
      type: script
      spec:
        run: npm install
    - name: run_tests
      type: script
      spec:
        run: npm test